<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editAttendance1"
            android:layout_alignParentStart="true"
            android:text="21/07/2019"
            android:textAlignment="center"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/presentabsentcheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="95dp" />

        <Button
            android:id="@+id/editAttendance1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:background="@drawable/editicon" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dateTextView"
            android:layout_alignBottom="@+id/dateTextView"
            android:layout_toStartOf="@+id/presentabsentcheckBox"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>