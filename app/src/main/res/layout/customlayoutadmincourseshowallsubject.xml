<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/SubjectEditButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editicon" />

        <TextView
            android:id="@+id/SubjectNameTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TeacherNamesTextView"
            android:layout_alignBottom="@+id/TeacherNamesTextView"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/SubjectCodeTextView"
            android:text="Java"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/SubjectCodeTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/SubjectNameTextView"
            android:layout_alignBottom="@+id/SubjectNameTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="1001"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TeacherNamesTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/SubjectEditButton"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/SubjectEditButton"
            android:text="Smita"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>