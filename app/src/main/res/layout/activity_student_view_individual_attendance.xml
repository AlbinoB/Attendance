<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bino.attendance.StudentViewIndividualAttendance">


    <TextView
        android:id="@+id/studentName"
        android:layout_width="218dp"
        android:layout_height="50dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="Internet Problem"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/semYear"
        app:layout_constraintEnd_toStartOf="@+id/currentDatetextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/semName"
        android:layout_width="182dp"
        android:layout_height="26dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="16dp"
        android:text="N/A"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/studentRollNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semYear" />

    <TextView
        android:id="@+id/courseName"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:text="N/A"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/studentRollNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/studentName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/studentRollNo"
        android:layout_width="185dp"
        android:layout_height="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="20dp"
        android:text="N/A"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/semName"
        app:layout_constraintTop_toBottomOf="@+id/courseName" />

    <TextView
        android:id="@+id/semYear"
        android:layout_width="181dp"
        android:layout_height="25dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="16dp"
        android:text="N/A"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/semName"
        app:layout_constraintEnd_toStartOf="@+id/studentRollNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentName" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="368dp"
        android:layout_height="369dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="367dp"
        android:layout_height="22dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="10dp"
        android:text="          Date                   Time Taken         P/A    "
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semName" />

    <TextView
        android:id="@+id/sCode"
        android:layout_width="101dp"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="72dp"
        android:text="N/A"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/semYear"
        app:layout_constraintTop_toBottomOf="@+id/studentRollNo" />


</android.support.constraint.ConstraintLayout>
