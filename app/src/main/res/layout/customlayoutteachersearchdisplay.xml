<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/srno"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="34dp"
            android:text="01"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/srno"
            android:layout_alignBottom="@+id/srno"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/srno"
            android:text="MCA01"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rollno"
            android:layout_alignBottom="@+id/rollno"
            android:layout_toEndOf="@+id/rollno"
            android:text="Albino"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="99.20"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>