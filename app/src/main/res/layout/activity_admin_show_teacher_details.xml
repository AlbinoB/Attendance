<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bino.attendance.AdminShowTeacherDetailsActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/TeacherEditImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/SubjectCodeTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/TeacherIdAddTextView"
            android:layout_below="@+id/TeacherEditImageView"
            android:layout_marginTop="58dp"
            android:text="Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TeacherNameShowAddEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/SubjectCodeTextView"
            android:layout_alignBottom="@+id/SubjectCodeTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:text="Amit gour"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TeacherIdAddTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SubjectCodeTextView"
            android:layout_marginStart="17dp"
            android:layout_marginTop="49dp"
            android:text="ID"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TeacherIdShowTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TeacherIdAddTextView"
            android:layout_alignBottom="@+id/TeacherIdAddTextView"
            android:layout_alignStart="@+id/TeacherDOBShowAddEditText"
            android:text="1234"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TeacherDOBAddTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/TeacherIdAddTextView"
            android:layout_below="@+id/TeacherIdAddTextView"
            android:layout_marginTop="42dp"
            android:text="DOB"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TeacherDOBShowAddEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TeacherJoinDateAddTextView"
            android:layout_alignStart="@+id/TeacherNameShowAddEditText"
            android:layout_marginBottom="11dp"
            android:text="09/11//1996"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TeacherJoinDateAddTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/TeacherDOBAddTextView"
            android:layout_below="@+id/TeacherDOBAddTextView"
            android:layout_marginTop="43dp"
            android:text="Joining Date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TeacherJoinDateShowTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TeacherJoinDateAddTextView"
            android:layout_alignBottom="@+id/TeacherJoinDateAddTextView"
            android:layout_alignStart="@+id/TeacherDOBShowAddEditText"
            android:text="10/11/2014"
            android:textSize="20sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
